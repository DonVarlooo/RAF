<div class="container-show">
  <div class="card">
    <div class="row">
      <div class="col">
          <% if @friend.photo.attached? %>
            <%= cl_image_tag @friend.photo.key, height: 300, width: 400, crop: :fill %>
          <% else %>
            <img src="https://ca.slack-edge.com/T02NE0241-U05FR7JJYA3-6b713784cedc-512" />
          <% end %>
      </div>
      <div class="col pt-5 ps-5">
          <h2><%= @friend.name %></h2>
          <p><strong>Cat√©gorie: </strong><%= @friend.category %></p>
          <p><strong>Prix: </strong><%= @friend.price %></p>
          <p><strong>Adresse: </strong><%= @friend.postal_address %></p>
          <div class="btn btn-outline-primary">
            <%= link_to "Book me", new_friend_booking_path(@friend) %>
          </div>
        </div>
      </div>
  </div>
</div>
