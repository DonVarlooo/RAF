
    <div  class="col-12 col-md-6 offset-lg-3 pb-5">
      <div class="bg-white p-3 shadow" >
        <h3>Book</h3>
        <%= simple_form_for [@friend, @user, @booking] do |f| %>
          <%= f.input :start_date,
            as: :string,
            input_html: {
              data: {
                controller: "datepicker",
                datepicker_target: 'startDateInput',
                dynamic_price_target: 'startDateInput',
                action:"change->dynamic-price#updatePrice"
                }
              } %>
            <%= f.input :end_date,
            as: :string,
            input_html: { data: { controller: "datepicker",
                                  datepicker_target: 'endDateInput',
                                  dynamic_price_target: 'endDateInput',
                                  action:"change->dynamic-price#updatePrice"
            }
          } %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
